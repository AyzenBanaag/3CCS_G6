@using BarangayBayanihanOnline.Models
@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService AuthorizationService
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Barangay Bayanihan Online</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    <!-- Custom Admin CSS -->
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />

    <!-- Page-specific styles -->
    @RenderSection("Styles", required: false)
</head>
<body>
    <div class="admin-wrapper">
        <!-- Sidebar Navigation -->
        <nav id="sidebar" class="admin-sidebar">
            <div class="sidebar-header">
                <h3>Admin Panel</h3>
                <strong>BBO</strong>
            </div>

            <ul class="list-unstyled components">
                <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active" : "")">
                    <a asp-controller="Admin" asp-action="Index">
                        <i class="fas fa-tachometer-alt"></i>
                        <span>Dashboard</span>
                    </a>
                </li>
                <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Users" ? "active" : "")">
                    <a asp-controller="Admin" asp-action="Users">
                        <i class="fas fa-users"></i>
                        <span>User Management</span>
                    </a>
                </li>
                <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Events" ? "active" : "")">
                    <a asp-controller="Admin" asp-action="Events">
                        <i class="fas fa-calendar-alt"></i>
                        <span>Events</span>
                    </a>
                </li>
                <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Donations" ? "active" : "")">
                    <a asp-controller="Admin" asp-action="Donations">
                        <i class="fas fa-donate"></i>
                        <span>Donations</span>
                    </a>
                </li>
                <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Volunteers" ? "active" : "")">
                    <a asp-controller="Admin" asp-action="Volunteers">
                        <i class="fas fa-hand-holding-heart"></i>
                        <span>Volunteers</span>
                    </a>
                </li>
                <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Messages" ? "active" : "")">
                    <a asp-controller="Admin" asp-action="Messages">
                        <i class="fas fa-envelope"></i>
                        <span>Messages</span>
                    </a>
                </li>
            </ul>
        </nav>

        <!-- Page Content -->
        <div id="content" class="admin-content">
            <!-- Top Navigation -->
            <nav class="navbar navbar-expand-lg admin-navbar">
                <div class="container-fluid">
                    <button type="button" id="sidebarCollapse" class="btn btn-dark">
                        <i class="fas fa-bars"></i>
                    </button>

                    <div class="navbar-nav ms-auto">
                        <div class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-user-circle me-1"></i>
                                Admin User
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li>
                                    <a class="dropdown-item" href="#">
                                        <i class="fas fa-user me-2"></i> Profile
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="#">
                                        <i class="fas fa-cog me-2"></i> Settings
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Account" asp-action="Logout">
                                        <i class="fas fa-sign-out-alt me-2"></i> Logout
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </nav>

            <!-- Main Content -->
            <main class="admin-main">
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </main>
        </div>
    </div>

    <!-- jQuery, Popper.js, Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Custom Admin JS -->
    <script src="~/js/admin.js" asp-append-version="true"></script>

    <!-- Sidebar Toggle Script -->
    <script>
        $(document).ready(function () {
            $('#sidebarCollapse').on('click', function () {
                $('#sidebar').toggleClass('active');
                $('#content').toggleClass('active');
            });

            // Highlight active menu item
            $('.components li').removeClass('active');
            $('.components li.@(ViewContext.RouteData.Values["Action"].ToString().ToLower())').addClass('active');
        });
    </script>

    <!-- Page-specific scripts -->
    @RenderSection("Scripts", required: false)
</body>
</html>

<style>
    /* Admin Layout Styles */
    :root {
        --sidebar-width: 250px;
        --sidebar-collapsed-width: 80px;
        --navbar-height: 56px;
        --primary-color: #4361ee;
        --secondary-color: #3a0ca3;
        --success-color: #4cc9f0;
        --danger-color: #f72585;
        --light-color: #f8f9fa;
        --dark-color: #212529;
        --sidebar-bg: #343a40;
        --sidebar-text: #e9ecef;
        --sidebar-active: #495057;
    }

    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f5f7fa;
        overflow-x: hidden;
    }

    .admin-wrapper {
        display: flex;
        width: 100%;
        min-height: 100vh;
    }

    /* Sidebar Styles */
    .admin-sidebar {
        width: var(--sidebar-width);
        min-height: 100vh;
        background: var(--sidebar-bg);
        color: var(--sidebar-text);
        transition: all 0.3s;
        position: fixed;
        z-index: 1000;
    }

        .admin-sidebar.active {
            width: var(--sidebar-collapsed-width);
        }

        .admin-sidebar .sidebar-header {
            padding: 20px;
            background: var(--sidebar-active);
            text-align: center;
        }

            .admin-sidebar .sidebar-header h3 {
                color: #fff;
                margin-bottom: 0;
                font-size: 1.2rem;
            }

            .admin-sidebar .sidebar-header strong {
                display: none;
            }

        .admin-sidebar.active .sidebar-header strong {
            display: block;
            font-size: 1.5rem;
        }

        .admin-sidebar.active .sidebar-header h3 {
            display: none;
        }

        .admin-sidebar ul.components {
            padding: 20px 0;
        }

        .admin-sidebar ul li a {
            padding: 15px 20px;
            font-size: 1rem;
            display: block;
            color: var(--sidebar-text);
            text-decoration: none;
            transition: all 0.3s;
        }

            .admin-sidebar ul li a:hover {
                background: var(--sidebar-active);
                color: #fff;
            }

            .admin-sidebar ul li a i {
                margin-right: 10px;
            }

        .admin-sidebar.active ul li a span {
            display: none;
        }

        .admin-sidebar.active ul li a i {
            margin-right: 0;
            font-size: 1.2rem;
            text-align: center;
            width: 100%;
        }

        .admin-sidebar ul li.active > a {
            background: var(--sidebar-active);
            color: #fff;
        }

    /* Content Styles */
    .admin-content {
        width: calc(100% - var(--sidebar-width));
        min-height: 100vh;
        margin-left: var(--sidebar-width);
        transition: all 0.3s;
    }

        .admin-content.active {
            width: calc(100% - var(--sidebar-collapsed-width));
            margin-left: var(--sidebar-collapsed-width);
        }

    .admin-navbar {
        padding: 15px 20px;
        background: #fff;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        z-index: 999;
    }

    .admin-main {
        padding: 20px;
        margin-top: var(--navbar-height);
    }

    /* Responsive Styles */
    @@media (max-width: 768px) {
        .admin-sidebar {
            width: var(--sidebar-collapsed-width);
        }

            .admin-sidebar .sidebar-header h3,
            .admin-sidebar ul li a span {
                display: none;
            }

            .admin-sidebar .sidebar-header strong,
            .admin-sidebar ul li a i {
                display: block;
                text-align: center;
            }

        .admin-content {
            width: calc(100% - var(--sidebar-collapsed-width));
            margin-left: var(--sidebar-collapsed-width);
        }

        .admin-sidebar.active {
            width: 0;
        }

        .admin-content.active {
            width: 100%;
            margin-left: 0;
        }
    }
</style>