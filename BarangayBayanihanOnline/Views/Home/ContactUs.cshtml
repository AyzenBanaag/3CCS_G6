@model BarangayBayanihanOnline.Models.ContactMessage
@{
    ViewData["Title"] = "Contact Us";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="contact-hero text-center py-5">
    <h1 class="display-4 fw-bold text-white">Contact Us</h1>
    <p class="lead text-white">We’d love to hear from you! Reach out with any questions or feedback.</p>
</div>

<div class="container py-5">
    <div class="row">
        <div class="col-lg-4 mb-4">
            <div class="contact-info bg-white p-4 shadow rounded">
                <h3 class="fw-bold mb-4 text-primary">Get in Touch</h3>
                <ul class="list-unstyled">
                    <li class="d-flex align-items-center mb-3">
                        <i class="fas fa-phone-alt fa-2x text-primary me-3"></i>
                        <div>
                            <h5 class="fw-bold">Phone</h5>
                            <p class="mb-0">+63 910 836 1699</p>
                        </div>
                    </li>
                    <li class="d-flex align-items-center mb-3">
                        <i class="fas fa-envelope fa-2x text-primary me-3"></i>
                        <div>
                            <h5 class="fw-bold">Email</h5>
                            <p class="mb-0">info@barangaybayanihan.org</p>
                        </div>
                    </li>
                    <li class="d-flex align-items-center">
                        <i class="fas fa-map-marker-alt fa-2x text-primary me-3"></i>
                        <div>
                            <h5 class="fw-bold">Address</h5>
                            <p class="mb-0">Barangay Bagumbayan, Taguig City</p>
                        </div>
                    </li>
                </ul>
            </div>
        </div>

        <div class="col-lg-8">
            <div class="contact-form bg-white p-4 shadow rounded">
                <h3 class="fw-bold mb-4 text-primary">Send Us a Message</h3>
                @if (TempData["MessageSent"] != null)
                {
                    <div class="alert alert-success">@TempData["MessageSent"]</div>
                }
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger">
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <p>@error.ErrorMessage</p>
                        }
                    </div>
                }
                <form asp-action="Submit" method="post">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Name" class="form-label fw-bold">Name <span class="text-danger">*</span></label>
                            <input asp-for="Name" class="form-control rounded-pill" required placeholder="Enter your name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Email" class="form-label fw-bold">Email <span class="text-danger">*</span></label>
                            <input asp-for="Email" class="form-control rounded-pill" type="email" required placeholder="Enter your email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Subject" class="form-label fw-bold">Subject <span class="text-danger">*</span></label>
                        <input asp-for="Subject" class="form-control rounded-pill" required placeholder="Enter subject" />
                        <span asp-validation-for="Subject" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Message" class="form-label fw-bold">Message <span class="text-danger">*</span></label>
                        <textarea asp-for="Message" class="form-control rounded" rows="5" required placeholder="Type your message here"></textarea>
                        <span asp-validation-for="Message" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary w-100 rounded-pill fw-bold py-2">Send Message</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .contact-hero {
            background: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url('/images/contact-bg.jpg');
            background-size: cover;
            background-position: center;
            color: white;
            margin-bottom: 30px;
        }

            .contact-hero h1 {
                font-family: 'Kaushan Script', cursive;
                font-size: 3.5rem;
                color: #FFD700;
                text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
            }

            .contact-hero .lead {
                font-size: 1.25rem;
            }

        .contact-info {
            border-left: 5px solid #f24c4c;
        }

            .contact-info h3 {
                color: #f24c4c;
                font-family: 'Poppins', sans-serif;
            }

            .contact-info i {
                color: #f24c4c;
            }

        .contact-form h3 {
            color: #f24c4c;
            font-family: 'Poppins', sans-serif;
        }

        .form-control {
            border: 1px solid #ced4da;
            padding: 10px 20px;
            transition: border-color 0.2s, box-shadow 0.2s;
        }

            .form-control:focus {
                border-color: #f24c4c;
                box-shadow: 0 0 5px rgba(242, 76, 76, 0.5);
            }

        .btn-primary {
            background-color: #f24c4c;
            border-color: #f24c4c;
            transition: all 0.3s;
        }

            .btn-primary:hover {
                background-color: #d43f3f;
                border-color: #d43f3f;
                transform: translateY(-2px);
            }

        .text-danger {
            font-size: 0.85rem;
            margin-top: 0.25rem;
            display: block;
        }

        @@media (max-width: 768px) {
            .contact-hero h1

        {
            font-size: 2.5rem;
        }

        .contact-hero .lead {
            font-size: 1rem;
        }

        .contact-form {
            padding: 20px;
        }

        }
    </style>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}