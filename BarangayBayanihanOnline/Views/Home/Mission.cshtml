@{
    ViewData["Title"] = "Our Mission";
}

<div class="mission-page">
    <div class="mission-hero">
        <h1>Our Mission</h1>
    </div>

    <div class="container mission-content">
        <div class="row">
            <div class="col-md-6">
                <h2>What Drives Us</h2>
                <p>Barangay Bayanihan Online is dedicated to preserving and promoting Filipino culture through digital innovation and community engagement. We strive to create a vibrant online space that connects Filipinos worldwide.</p>
                <p>Our platform serves as a bridge between generations, helping to maintain cultural traditions while adapting to modern technology.</p>
            </div>
            <div class="col-md-6">
                <img src="/images/mission-photo.jpg" alt="Community gathering" class="img-fluid rounded shadow">
            </div>
        </div>

        <div class="mission-values mt-5">
            <h2>Our Core Values</h2>
            <div class="row">
                <div class="col-md-4">
                    <div class="value-card">
                        <h3>Community</h3>
                        <p>Building bridges between Filipinos across generations and geographies through shared experiences and mutual support.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="value-card">
                        <h3>Culture</h3>
                        <p>Preserving and celebrating Filipino traditions, arts, and heritage in the digital age.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="value-card">
                        <h3>Innovation</h3>
                        <p>Using technology to enhance cultural connections while maintaining authentic Filipino values.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>