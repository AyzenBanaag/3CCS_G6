@{
    ViewData["Title"] = "Our Mission";
}

<div class="mission-page">
    <div class="mission-hero">
        <h1>Our Mission</h1>
    </div>

    <div class="container mission-content">
        <div class="row">
            <div class="col-md-6">
                <h2>What Drives Us?</h2>
                <p>Barangay Bayanihan Online is dedicated to preserving and promoting Filipino culture through digital innovation and community engagement.</p>
                <p>Our platform serves as a bridge between generations, helping to maintain cultural traditions while adapting to modern technology.</p>
            </div>
            <div class="col-md-6">
                <img src="~/Images/larm-rmah-AEaTUnvneik-unsplash.jpg" alt="Community gathering" class="img-fluid rounded shadow">
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
                        /* Mission Page */
    .mission-hero {
        background: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5)), url('/images/mission-bg.jpg');
        background-size: cover;
        background-position: center;
        color: white;
        padding: 100px 0;
        text-align: center;
        margin-bottom: 50px;
    }

    .mission-hero h1 {
        font-family: 'Kaushan Script', cursive;
        font-size: 4rem;
        color: #FFD700;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.5);
    }

    .mission-content h2 {
        color: #f24c4c;
        font-family: 'Freeman', sans-serif;
        margin-bottom: 20px;
    }

    .value-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0,0,0,0.1);
    }

    .value-card h3 {
        color: #f24c4c;
        font-family: 'Poppins', sans-serif;
    }
    .mission-page body{
        background: red;
    }
    </style>
    }