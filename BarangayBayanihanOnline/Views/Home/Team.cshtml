@section Styles {
    <style>
        .team-page {
            padding: 50px 15px;
        }

        .team-hero {
            background: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6)), url('/images/tem-bg.jpg') center/cover no-repeat;
            color: white;
            padding: 80px 0;
            text-align: center;
            border-radius: 10px;
            margin-bottom: 40px;
        }

            .team-hero h1 {
                font-family: 'Kaushan Script', cursive;
                font-size: 3.5rem;
                color: #FFD700;
            }

            .team-hero .lead {
                font-size: 1.3rem;
                max-width: 700px;
                margin: auto;
            }

        .team-section {
            text-align: center;
            margin-bottom: 50px;
        }

        .section-title {
            color: #f24c4c;
            font-family: 'Poppins', sans-serif;
            font-size: 2rem;
            position: relative;
            margin-bottom: 20px;
        }

        .team-member {
            text-align: center;
            padding: 20px;
            transition: transform 0.3s;
        }

            .team-member:hover {
                transform: translateY(-5px);
            }

        .team-photo {
            width: 220px;
            height: 220px;
            object-fit: cover;
            border-radius: 50%;
            border: 4px solid #f24c4c;
            margin-bottom: 15px;
        }

        .team-info h3 {
            color: #f24c4c;
            font-family: 'Poppins', sans-serif;
            margin-top: 10px;
        }

        .position {
            color: #FFD700;
            font-weight: bold;
        }

        .social-links a {
            color: #f24c4c;
            font-size: 1.2rem;
            margin: 0 5px;
            transition: color 0.3s ease;
        }

            .social-links a:hover {
                color: #FFD700;
            }

        @@media (max-width: 768px) {
            .team-hero h1 {
                font-size: 2.5rem;
            }

            .team-hero .lead {
                font-size: 1.1rem;
            }

            .team-photo {
                width: 180px;
                height: 180px;
            }
        }
    </style>
}
