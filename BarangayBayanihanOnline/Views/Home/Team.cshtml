@section Styles {
    <style>
        .team-page {
            padding-bottom: 50px;
        }

        .team-hero {
            background: linear-gradient(rgba(0,0,0,0.6), url('/images/team-bg.jpg');
            background-size: cover;
            background-position: center;
            color: white;
            padding: 100px 0;
            text-align: center;
            margin-bottom: 50px;
        }

            .team-hero h1 {
                font-family: 'Kaushan Script', cursive;
                font-size: 4rem;
                color: #FFD700;
                text-shadow: 2px 2px 4px rgba(0,0,0,0.5);
            }

            .team-hero .lead {
                font-size: 1.5rem;
                max-width: 800px;
                margin: 0 auto;
            }

        .team-section {
            margin-bottom: 60px;
        }

        .section-title {
            color: #f24c4c;
            font-family: 'Freeman', sans-serif;
            text-align: center;
            margin-bottom: 40px;
            position: relative;
        }

            .section-title::after {
                content: '';
                display: block;
                width: 100px;
                height: 3px;
                background: #FFD700;
                margin: 15px auto;
            }

        .team-member {
            text-align: center;
            margin-bottom: 30px;
            transition: all 0.3s;
        }

        .team-photo {
            width: 250px;
            height: 250px;
            object-fit: cover;
            border-radius: 50%;
            border: 5px solid #f24c4c;
            margin: 0 auto 20px;
            transition: all 0.3s;
        }

        .team-member:hover .team-photo {
            transform: scale(1.05);
            box-shadow: 0 10px 20px rgba(0,0,0,0.2);
        }

        .team-info h3 {
            color: #f24c4c;
            font-family: 'Poppins', sans-serif;
            margin-top: 15px;
        }

        .position {
            color: #FFD700;
            font-weight: bold;
            margin-bottom: 15px;
        }

        .social-links {
            margin-top: 15px;
        }

            .social-links a {
                color: #f24c4c;
                font-size: 1.2rem;
                margin: 0 5px;
                transition: all 0.3s;
            }

                .social-links a:hover {
                    color: #FFD700;
                    transform: translateY(-3px);
                }

        .volunteer {
            text-align: center;
            margin-bottom: 30px;
        }

        .volunteer-photo {
            width: 150px;
            height: 150px;
            object-fit: cover;
            border-radius: 50%;
            border: 3px solid #f24c4c;
            margin: 0 auto 15px;
        }

        .volunteer h4 {
            color: #f24c4c;
            font-family: 'Poppins', sans-serif;
            margin-top: 10px;
        }

        @@media (max-width: 768px) {
            .team-hero h1 {
                font-size: 2.5rem;
            }

            .team-hero .lead {
                font-size: 1.2rem;
            }

            .team-photo {
                width: 200px;
                height: 200px;
            }
        }
    </style>
}