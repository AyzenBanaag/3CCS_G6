@{
    ViewData["Title"] = "Media Landings";
}

<div class="media-page">
    <div class="media-hero">
        <h1>Media Landings</h1>
        <p class="lead">See our latest features and coverage on Facebook</p>
    </div>

    <div class="container">
        <div class="social-embed">
            <!-- Facebook Post 1 -->
            <div class="fb-post">
                <div class="fb-post-header">
                    <span class="platform-name">Facebook</span>
                    <h3>Barangay Bayanihan Online</h3>
                    <span class="post-date">June 15, 2023</span>
                </div>
                <div class="fb-post-content">
                    <p>Celebrating our community's resilience at the annual Barangay Fiesta! See how we're keeping traditions alive in the digital age.</p>
                    <div class="post-image-label">Event photo</div>
                </div>
                <div class="fb-post-actions">
                    <span>245</span>
                    <span>38</span>
                    <span>12</span>
                </div>
            </div>

            <!-- Facebook Post 2 -->
            <div class="fb-post">
                <div class="fb-post-header">
                    <span class="platform-name">Facebook</span>
                    <h3>Barangay Bayanihan Online</h3>
                    <span class="post-date">May 28, 2023</span>
                </div>
                <div class="fb-post-content">
                    <p>Our youth mentorship program is changing lives! Meet some of our amazing participants and learn about their cultural journey.</p>
                    <div class="post-image-label">Program photo</div>
                </div>
                <div class="fb-post-actions">
                    <span>189</span>
                    <span>24</span>
                    <span>8</span>
                </div>
            </div>

            <div class="text-center mt-5">
                <a href="https://www.facebook.com/charlesadrianbanias" class="btn btn-visit" target="_blank">
                    Visit Our Facebook Page
                </a>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .media-page {
            padding: 20px 0 50px;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: #333;
        }

        .media-hero {
            text-align: center;
            margin-bottom: 40px;
            padding: 40px 0;
        }

            .media-hero h1 {
                font-size: 2.5rem;
                font-weight: 600;
                margin-bottom: 15px;
                color: #333;
            }

            .media-hero .lead {
                font-size: 1.2rem;
                color: #666;
            }

        .fb-post {
            max-width: 800px;
            margin: 0 auto 30px;
            padding: 20px;
            border: 1px solid #e0e0e0;
            border-radius: 8px;
        }

        .fb-post-header {
            margin-bottom: 15px;
        }

        .platform-name {
            display: block;
            font-size: 0.9rem;
            color: #666;
            margin-bottom: 5px;
        }

        .fb-post-header h3 {
            font-size: 1.3rem;
            font-weight: 600;
            margin: 0 0 5px 0;
            color: #333;
        }

        .post-date {
            font-size: 0.9rem;
            color: #888;
        }

        .fb-post-content p {
            font-size: 1rem;
            line-height: 1.5;
            margin-bottom: 15px;
        }

        .post-image-label {
            font-size: 0.9rem;
            color: #666;
            font-style: italic;
            margin-top: 10px;
        }

        .fb-post-actions {
            display: flex;
            gap: 15px;
            margin-top: 15px;
            padding-top: 15px;
            border-top: 1px solid #e0e0e0;
            font-size: 0.9rem;
            color: #666;
        }

        .btn-visit {
            display: inline-block;
            padding: 10px 25px;
            background-color: #1877f2;
            color: white;
            text-decoration: none;
            border-radius: 5px;
            font-weight: 500;
            transition: background-color 0.3s;  
        }

            .btn-visit:hover {
                background-color: #166fe5;
            }

        @@media (max-width: 768px) {
            .media-hero h1 {
                font-size: 2rem;
            }

            .media-hero .lead {
                font-size: 1rem;
            }

            .fb-post {
                padding: 15px;
            }
        }
    </style>
}