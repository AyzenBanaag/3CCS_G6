@model BarangayBayanihanOnline.Models.AdminViewModel

@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="dashboard-wrapper">
    <!-- Dashboard Header -->
    <div class="dashboard-header">
        <h1 class="dashboard-title">Admin Dashboard</h1>
        <div class="header-actions">
            <div class="date-display">
                <i class="fas fa-calendar-alt"></i>
                <span>@DateTime.Now.ToString("MMMM dd, yyyy")</span>
            </div>
        </div>
    </div>

    <!-- Stats Overview -->
    <div class="stats-container">
        <div class="stat-card users-card">
            <div class="stat-icon-wrapper">
                <div class="stat-icon">
                    <i class="fas fa-users"></i>
                </div>
            </div>
            <div class="stat-details">
                <div class="stat-value">@Model.Users.Count()</div>
                <div class="stat-label">Total Users</div>
            </div>
            <div class="stat-chart">
                <!-- Visual chart representation could be added here -->
            </div>
        </div>

        <div class="stat-card events-card">
            <div class="stat-icon-wrapper">
                <div class="stat-icon">
                    <i class="fas fa-calendar-check"></i>
                </div>
            </div>
            <div class="stat-details">
                <div class="stat-value">@Model.Events.Count()</div>
                <div class="stat-label">Total Events</div>
            </div>
            <div class="stat-chart">
                <!-- Visual chart representation could be added here -->
            </div>
        </div>

        <div class="stat-card messages-card">
            <div class="stat-icon-wrapper">
                <div class="stat-icon">
                    <i class="fas fa-envelope"></i>
                </div>
            </div>
            <div class="stat-details">
                <div class="stat-value">@Model.ContactMessages.Count()</div>
                <div class="stat-label">Messages</div>
            </div>
            <div class="stat-chart">
                <!-- Visual chart representation could be added here -->
            </div>
        </div>

        <div class="stat-card donations-card">
            <div class="stat-icon-wrapper">
                <div class="stat-icon">
                    <i class="fas fa-donate"></i>
                </div>
            </div>
            <div class="stat-details">
                <div class="stat-value">@Model.Donations.Count()</div>
                <div class="stat-label">Donations</div>
            </div>
            <div class="stat-chart">
                <!-- Visual chart representation could be added here -->
            </div>
        </div>

        <div class="stat-card volunteers-card">
            <div class="stat-icon-wrapper">
                <div class="stat-icon">
                    <i class="fas fa-hand-holding-heart"></i>
                </div>
            </div>
            <div class="stat-details">
                <div class="stat-value">@Model.Volunteers.Count()</div>
                <div class="stat-label">Volunteers</div>
            </div>
            <div class="stat-chart">
                <!-- Visual chart representation could be added here -->
            </div>
        </div>
    </div>

    <!-- Dashboard Content -->
    <div class="dashboard-content">
        <div class="tabs-container">
            <div class="tabs-header">
                <button class="tab-button active" data-tab="users-tab">
                    <i class="fas fa-users"></i> Users
                </button>
                <button class="tab-button" data-tab="events-tab">
                    <i class="fas fa-calendar-check"></i> Events
                </button>
                <button class="tab-button" data-tab="donations-tab">
                    <i class="fas fa-donate"></i> Donations
                </button>
                <button class="tab-button" data-tab="messages-tab">
                    <i class="fas fa-envelope"></i> Messages
                </button>
                <button class="tab-button" data-tab="volunteers-tab">
                    <i class="fas fa-hand-holding-heart"></i> Volunteers
                </button>
                <button class="tab-button" data-tab="login-history-tab">
                    <i class="fas fa-history"></i> Login History
                </button>
            </div>

            <div class="tab-content-container">
                <!-- Users Tab -->
                <div class="tab-content active" id="users-tab">
                    <div class="tab-header">
                        <h2>Users Management</h2>
                        <div class="tab-actions">
                            <div class="search-container">
                                <input type="text" class="search-input" placeholder="Search users...">
                                <i class="fas fa-search"></i>
                            </div>
                        </div>
                    </div>
                    <div class="table-responsive">
                        <table class="data-table">
                            <thead>
                                <tr>
                                    <th>User ID</th>
                                    <th>Full Name</th>
                                    <th>Email</th>
                                    <th>Role</th>
                                    <th>Last Login</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var user in Model.Users)
                                {
                                    <tr>
                                        <td><span class="id-badge">@user.UserId</span></td>
                                        <td>
                                            <div class="user-info">
                                                <div class="user-avatar">
                                                    @user.FullName[0]
                                                </div>
                                                @user.FullName
                                            </div>
                                        </td>
                                        <td>@user.Email</td>
                                        <td>
                                            <span class="status-badge @(user.IsAdmin ? "admin" : "user")">
                                                @(user.IsAdmin ? "Admin" : "User")
                                            </span>
                                        </td>
                                        <td>@(user.LastLogin?.ToString("g") ?? "Never")</td>
                                        <td>
                                            <div class="action-buttons">
                                                <a href="@Url.Action("EditUser", "Admin", new { id = user.UserId })" class="action-btn edit-btn" title="Edit User">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a href="@Url.Action("DeleteUser", "Admin", new { id = user.UserId })" class="action-btn delete-btn" title="Delete User">
                                                    <i class="fas fa-trash-alt"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- Events Tab -->
                <div class="tab-content" id="events-tab">
                    <div class="tab-header">
                        <h2>Events Management</h2>
                        <div class="tab-actions">
                            <a asp-controller="Admin" asp-action="AllEvents" class="btn btn-primary btn-with-icon">
                                <i class="fas fa-list"></i> All Events
                            </a>
                            <div class="search-container">
                                <input type="text" class="search-input" placeholder="Search events...">
                                <i class="fas fa-search"></i>
                            </div>
                        </div>
                    </div>
                    <div class="table-responsive">
                        <table class="data-table">
                            <thead>
                                <tr>
                                    <th>Event ID</th>
                                    <th>Name</th>
                                    <th>Start Date</th>
                                    <th>End Date</th>
                                    <th>Created By</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var evt in Model.Events)
                                {
                                    <tr>
                                        <td><span class="id-badge">@evt.EventId</span></td>
                                        <td>@evt.EventName</td>
                                        <td>@evt.StartDateTime.ToString("g")</td>
                                        <td>@evt.EndDateTime.ToString("g")</td>
                                        <td>@(evt.User?.FullName ?? "Unknown")</td>
                                        <td>
                                            <div class="action-buttons">
                                                <button class="action-btn view-btn" title="View Event" data-event-id="@evt.EventId" data-event-name="@evt.EventName" onclick="openViewEventModal(this)">
                                                    <i class="fas fa-eye"></i>
                                                </button>
                                                <a href="@Url.Action("EditEvent", "Admin", new { id = evt.EventId })" class="action-btn edit-btn" title="Edit Event">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <button class="action-btn delete-btn" title="Delete Event" data-event-id="@evt.EventId" data-event-name="@evt.EventName" onclick="openDeleteEventModal(this)">
                                                    <i class="fas fa-trash-alt"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- Donations Tab -->
                <div class="tab-content" id="donations-tab">
                    <div class="tab-header">
                        <h2>Donations Management</h2>
                        <div class="tab-actions">
                            <div class="search-container">
                                <input type="text" class="search-input" placeholder="Search donations...">
                                <i class="fas fa-search"></i>
                            </div>
                        </div>
                    </div>
                    <div class="table-responsive">
                        <table class="data-table">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Donor</th>
                                    <th>Amount</th>
                                    <th>GCash Ref</th>
                                    <th>Status</th>
                                    <th>Donation Date</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var donation in Model.Donations)
                                {
                                    <tr>
                                        <td><span class="id-badge">@donation.DonationId</span></td>
                                        <td>
                                            <div class="user-info">
                                                <div class="user-avatar">
                                                    @(donation.DonorName?.Length > 0 ? donation.DonorName[0] : '?')
                                                </div>
                                                @donation.DonorName
                                            </div>
                                        </td>
                                        <td><span class="amount">@donation.Amount.ToString("C")</span></td>
                                        <td>@donation.GCashReferenceNumber</td>
                                        <td>
                                            <span class="status-badge @donation.Status.ToLower()">
                                                @donation.Status
                                            </span>
                                        </td>
                                        <td>@donation.DonationDate.ToString("g")</td>
                                        <td>
                                            <div class="action-buttons">
                                                @if (donation.Status == "Pending")
                                                {
                                                    <form asp-action="VerifyDonation" method="post" style="display:inline;">
                                                        <input type="hidden" name="donationId" value="@donation.DonationId" />
                                                        <button type="submit" class="action-btn verify-btn" title="Verify Donation">
                                                            <i class="fas fa-check-circle"></i>
                                                        </button>
                                                    </form>
                                                }
                                                <button class="action-btn view-btn" title="View Details"
                                                        data-donation-id="@donation.DonationId"
                                                        data-donor-name="@donation.DonorName"
                                                        data-amount="@donation.Amount.ToString("C")"
                                                        data-gcash-ref="@donation.GCashReferenceNumber"
                                                        data-status="@donation.Status"
                                                        data-date="@donation.DonationDate.ToString("g")"
                                                        onclick="openViewDonationModal(this)">
                                                    <i class="fas fa-eye"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- Messages Tab -->
                <div class="tab-content" id="messages-tab">
                    <div class="tab-header">
                        <h2>Contact Messages</h2>
                        <div class="tab-actions">
                            <div class="search-container">
                                <input type="text" class="search-input" placeholder="Search messages...">
                                <i class="fas fa-search"></i>
                            </div>
                        </div>
                    </div>
                    <div class="table-responsive">
                        <table class="data-table">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>From</th>
                                    <th>Subject</th>
                                    <th>Message</th>
                                    <th>Status</th>
                                    <th>Date</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var message in Model.ContactMessages)
                                {
                                    <tr>
                                        <td><span class="id-badge">@message.MessageId</span></td>
                                        <td>
                                            <div class="user-info">
                                                <div class="user-avatar">
                                                    @(message.Name?.Length > 0 ? message.Name[0] : '?')
                                                </div>
                                                <div>
                                                    <div>@message.Name</div>
                                                    <div class="email">@message.Email</div>
                                                </div>
                                            </div>
                                        </td>
                                        <td>@message.Subject</td>
                                        <td class="message-preview">@message.Message</td>
                                        <td>
                                            <span class="status-badge @message.Status.ToLower()">
                                                @message.Status
                                            </span>
                                        </td>
                                        <td>@message.SubmittedAt.ToString("g")</td>
                                        <td>
                                            <div class="action-buttons">
                                                <button class="action-btn view-btn" title="View Message"
                                                        data-message-id="@message.MessageId"
                                                        data-sender-name="@message.Name"
                                                        data-sender-email="@message.Email"
                                                        data-subject="@message.Subject"
                                                        data-message-text="@message.Message"
                                                        data-status="@message.Status"
                                                        data-date="@message.SubmittedAt.ToString("g")"
                                                        onclick="openViewMessageModal(this)">
                                                    <i class="fas fa-eye"></i>
                                                </button>
                                                <button class="action-btn reply-btn" title="Reply"
                                                        data-message-id="@message.MessageId"
                                                        data-reply-to="@message.Email"
                                                        data-reply-name="@message.Name"
                                                        data-subject="@message.Subject"
                                                        onclick="openReplyMessageModal(this)">
                                                    <i class="fas fa-reply"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- Volunteers Tab -->
                <div class="tab-content" id="volunteers-tab">
                    <div class="tab-header">
                        <h2>Volunteers Management</h2>
                        <div class="tab-actions">
                            <div class="search-container">
                                <input type="text" class="search-input" placeholder="Search volunteers...">
                                <i class="fas fa-search"></i>
                            </div>
                        </div>
                    </div>
                    <div class="table-responsive">
                        <table class="data-table">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Volunteer</th>
                                    <th>Contact</th>
                                    <th>Status</th>
                                    <th>Application Date</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var volunteer in Model.Volunteers)
                                {
                                    <tr>
                                        <td><span class="id-badge">@volunteer.VolunteerId</span></td>
                                        <td>
                                            <div class="user-info">
                                                <div class="user-avatar">
                                                    @(volunteer.FullName?.Length > 0 ? volunteer.FullName[0] : '?')
                                                </div>
                                                @volunteer.FullName
                                            </div>
                                        </td>
                                        <td>
                                            <div>
                                                <div>@volunteer.Email</div>
                                                <div class="phone">@volunteer.PhoneNumber</div>
                                            </div>
                                        </td>
                                        <td>
                                            <span class="status-badge @volunteer.Status.ToLower()">
                                                @volunteer.Status
                                            </span>
                                        </td>
                                        <td>@volunteer.ApplicationDate.ToString("g")</td>
                                        <td>
                                            <div class="action-buttons">
                                                @if (volunteer.Status == "Pending")
                                                {
                                                    <form asp-action="ApproveVolunteer" method="post" style="display:inline;">
                                                        <input type="hidden" name="volunteerId" value="@volunteer.VolunteerId" />
                                                        <button type="submit" class="action-btn approve-btn" title="Approve">
                                                            <i class="fas fa-check-circle"></i>
                                                        </button>
                                                    </form>
                                                }
                                                <button class="action-btn view-btn" title="View Details"
                                                        data-volunteer-id="@volunteer.VolunteerId"
                                                        data-volunteer-name="@volunteer.FullName"
                                                        data-volunteer-email="@volunteer.Email"
                                                        data-volunteer-phone="@volunteer.PhoneNumber"
                                                        data-status="@volunteer.Status"
                                                        data-date="@volunteer.ApplicationDate.ToString("g")"
                                                        onclick="openViewVolunteerModal(this)">
                                                    <i class="fas fa-eye"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- Login History Tab -->
                <div class="tab-content" id="login-history-tab">
                    <div class="tab-header">
                        <h2>Login History</h2>
                        <div class="tab-actions">
                            <div class="search-container">
                                <input type="text" class="search-input" placeholder="Search login history...">
                                <i class="fas fa-search"></i>
                            </div>
                        </div>
                    </div>
                    <div class="table-responsive">
                        <table class="data-table">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>User</th>
                                    <th>Login Time</th>
                                    <th>IP Address</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var login in Model.LoginHistory)
                                {
                                    <tr>
                                        <td><span class="id-badge">@login.LoginId</span></td>
                                        <td>
                                            <div class="user-info">
                                                <div class="user-avatar">
                                                    @(login.User?.FullName?.Length > 0 ? login.User.FullName[0] : '?')
                                                </div>
                                                @(login.User?.FullName ?? "Unknown")
                                            </div>
                                        </td>
                                        <td>@login.LoginTime.ToString("g")</td>
                                        <td>@(login.IpAddress ?? "N/A")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- View Event Modal -->
<div class="modal fade" id="viewEventModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">View Event</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <h4 id="viewEventName" class="text-center mb-4"></h4>
                <div class="row">
                    <div class="col-md-12">
                        <div class="mb-3">
                            <div class="event-details-container">
                                <div class="event-detail">
                                    <div class="event-detail-label">Event ID:</div>
                                    <div class="event-detail-value" id="viewEventId"></div>
                                </div>
                                <div class="event-details-grid">
                                    <div class="event-detail">
                                        <div class="event-detail-label">Start Date:</div>
                                        <div class="event-detail-value" id="viewEventStart"></div>
                                    </div>
                                    <div class="event-detail">
                                        <div class="event-detail-label">End Date:</div>
                                        <div class="event-detail-value" id="viewEventEnd"></div>
                                    </div>
                                    <div class="event-detail">
                                        <div class="event-detail-label">Location:</div>
                                        <div class="event-detail-value" id="viewEventLocation">Plaza Roma, Intramuros</div>
                                    </div>
                                    <div class="event-detail">
                                        <div class="event-detail-label">Type:</div>
                                        <div class="event-detail-value" id="viewEventType">Community Service</div>
                                    </div>
                                </div>
                                <div class="event-detail">
                                    <div class="event-detail-label">Description:</div>
                                    <div class="event-detail-value" id="viewEventDescription">
                                        Annual community service event focusing on cleanup and beautification of our community areas.
                                        Volunteers will work together to collect trash, plant trees, and repaint public spaces.
                                    </div>
                                </div>
                                <div class="event-detail">
                                    <div class="event-detail-label">Created By:</div>
                                    <div class="event-detail-value" id="viewEventCreator">Admin User</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <a id="editEventLink" href="#" class="btn btn-primary">Edit Event</a>
            </div>
        </div>
    </div>
</div>

<!-- Delete Event Modal -->
<div class="modal fade" id="deleteEventModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Delete Event</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete event <strong id="deleteEventName"></strong>?</p>
                <p class="text-danger">This action cannot be undone.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="deleteEventForm" action="/Admin/DeleteEvent" method="post">
                    <input type="hidden" id="deleteEventId" name="eventId">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- View Donation Modal -->
<div class="modal fade" id="viewDonationModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Donation Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="donation-details">
                    <div class="donation-icon">
                        <i class="fas fa-donate"></i>
                    </div>
                    <div class="donation-info-container">
                        <div class="donation-info">
                            <span class="donation-label">Donor:</span>
                            <span class="donation-value" id="viewDonorName"></span>
                        </div>
                        <div class="donation-info">
                            <span class="donation-label">Amount:</span>
                            <span class="donation-value amount" id="viewDonationAmount"></span>
                        </div>
                        <div class="donation-info">
                            <span class="donation-label">Reference #:</span>
                            <span class="donation-value" id="viewDonationGcashRef"></span>
                        </div>
                        <div class="donation-info">
                            <span class="donation-label">Status:</span>
                            <span class="donation-value" id="viewDonationStatus"></span>
                        </div>
                        <div class="donation-info">
                            <span class="donation-label">Donation Date:</span>
                            <span class="donation-value" id="viewDonationDate"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <div id="verifyDonationSection">
                    <form id="verifyDonationForm" action="/Admin/VerifyDonation" method="post">
                        <input type="hidden" id="verifyDonationId" name="donationId">
                        <button type="submit" class="btn btn-success">Verify Donation</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- View Message Modal -->
<div class="modal fade" id="viewMessageModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Message Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="message-details">
                    <div class="message-header">
                        <div class="message-from">
                            <div class="user-info">
                                <div class="user-avatar" id="viewMessageAvatar"></div>
                                <div>
                                    <div id="viewMessageName" class="sender-name"></div>
                                    <div id="viewMessageEmail" class="email"></div>
                                </div>
                            </div>
                        </div>
                        <div class="message-date" id="viewMessageDate"></div>
                    </div>
                    <div class="message-subject">
                        <span class="subject-label">Subject:</span>
                        <span id="viewMessageSubject" class="subject-text"></span>
                    </div>
                    <div class="message-body" id="viewMessageBody"></div>
                </div>
            </div>
